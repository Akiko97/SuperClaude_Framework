[Unit]
Description=SuperClaude Bridge HTTP Server
Documentation=https://github.com/user/SuperClaude_MCP
After=network.target

[Service]
Type=simple
User=anton
WorkingDirectory=/home/anton/SuperClaude_MCP/MCP_Servers/bridge-hooks
ExecStart=/usr/bin/node dist/http-server.js
Restart=always
RestartSec=10

# Environment
Environment="NODE_ENV=production"
Environment="CLAUDE_ENV=production"
EnvironmentFile=/home/anton/SuperClaude_MCP/.env

# Logging
StandardOutput=append:/home/anton/SuperClaude_MCP/logs/bridge.log
StandardError=append:/home/anton/SuperClaude_MCP/logs/bridge-error.log

# Security
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ProtectHome=read-only
ReadWritePaths=/home/anton/SuperClaude_MCP/logs

# Resource limits
LimitNOFILE=65536
MemoryLimit=1G
CPUQuota=50%

[Install]
WantedBy=multi-user.target