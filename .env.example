# SuperClaude MCP Environment Configuration
# Copy this file to .env and update with your actual values

# Environment mode
CLAUDE_ENV=development

# Bridge hooks configuration
BRIDGE_HOOKS_URL=http://localhost:8080
BRIDGE_HTTP_PORT=8080
BRIDGE_HTTP_HOST=localhost

# External MCP server API keys
# Get your Context7 API key from https://context7.com/api
CONTEXT7_API_KEY=your-context7-api-key-here

# Sequential is typically self-hosted or provided by your organization
SEQUENTIAL_TOKEN=your-sequential-token-here

# Get your Magic (21st.dev) API key from https://21st.dev/api
MAGIC_API_KEY=your-magic-api-key-here

# Playwright configuration (usually no key needed for local execution)
PLAYWRIGHT_MODE=local

# Performance settings
MCP_TIMEOUT_MS=5000
CIRCUIT_BREAKER_THRESHOLD=5
CIRCUIT_BREAKER_RECOVERY_TIME=60

# Logging configuration
LOG_LEVEL=info
LOG_FILE=/home/anton/SuperClaude_MCP/logs/superclaude.log

# Cache settings
CACHE_ENABLED=true
CACHE_TTL=300

# Development settings
DEBUG_MODE=false
MOCK_EXTERNAL_SERVERS=false