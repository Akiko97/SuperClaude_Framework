{
  "name": "superclaude-tasks",
  "version": "3.0.0",
  "description": "SuperClaude Tasks Server - Work Management Engine with Semantic Persistence",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "build:simple": "npx tsc src/MCPServerSimple.ts src/core/SimpleDatabaseManager.ts src/core/SimpleStubs.ts --outDir dist --module esnext --target es2022 --moduleResolution node --allowSyntheticDefaultImports --esModuleInterop --skipLibCheck",
    "start": "node dist/index.js",
    "start:simple": "node dist/MCPServerSimple.js",
    "start:working": "node dist/MCPServerWorking.js",
    "start:memory": "node dist/MCPServerMemory.js",
    "start:coordination": "node dist/MCPServerCoordination.js",
    "start:production": "node dist/MCPServerProduction.js",
    "dev": "tsx src/index.ts",
    "dev:simple": "tsx src/MCPServerSimple.ts",
    "test": "jest",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:performance": "jest tests/performance",
    "lint": "eslint src/**/*.ts",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "mcp-server",
    "superclaude",
    "tasks",
    "project-management",
    "semantic-persistence",
    "work-management"
  ],
  "author": "SuperClaude Team",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "typescript": "^5.0.0",
    "uuid": "^9.0.0",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "zod": "^3.22.0",
    "winston": "^3.10.0",
    "node-cache": "^5.1.2",
    "sqlite3": "^5.1.6",
    "redis": "^4.6.0",
    "compression": "^1.7.4",
    "shared": "file:../shared"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/lodash": "^4.14.0",
    "@types/uuid": "^9.0.0",
    "@types/compression": "^1.7.0",
    "jest": "^29.0.0",
    "ts-jest": "^29.0.0",
    "tsx": "^4.0.0",
    "eslint": "^8.45.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}